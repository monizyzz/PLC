let NF: INT;
let NT: INT;
let NTP: INT;
let NTP1: INT;
let NTP2: INT;
let opcao: INT;

do {
    console.output("Será que passava a PLC? Se tivesse... \n");
    
    console.output("Nota teste: ");
    NT = console.input();
    console.output("\n");
    
    console.output("Nota trabalho prático 1: ");
    NTP1 = console.input();
    console.output("\n");
    
    console.output("Nota trabalho prático 2: ");
    NTP2 = console.input();
    console.output("\n");

    NTP = (NTP1 + NTP2) / 2;

    NF = 0.6 * NT + 0.4 * NTP;
    if (NT >= 10) {
        console.output("Passava com nota: ");
        console.output(NF);
    } else {
        console.output("Não passava a PLC ficava com a nota: ");
        console.output(NF);
    }

    console.output("\n");
    opcao = console.output("Deseja continuar? (1 - Sim, 0 - Não): ");
    console.output("\n");

} while (opcao == 1);